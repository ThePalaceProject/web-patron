{
  "name": "simplified-circulation-patron-web",
  "version": "0.2.1",
  "description": "patron UI for Circulation Manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/circulation-patron-web.git"
  },
  "author": "NYPL",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "./node_modules/.bin/eslint -c .eslintrc.js src/**/*.ts src/**/*.tsx",
    "lint:js:fix": "./node_modules/.bin/eslint -c .eslintrc.js src/**/*.ts src/**/*.tsx --fix",
    "lint:sass": "sass-lint -c .sass-lint.yml -v -q",
    "test": "npm run lint:js && tsc && cp -r src/stylesheets lib && mocha --require lib/testHelper.js lib/__tests__/*.js lib/**/__tests__/*.js lib/**/**/__tests__/*.js",
    "build:server": "tsc && cp -r src/stylesheets lib",
    "build:client:prod": "cp -r src/stylesheets lib && webpack -p --progress --display-modules --config webpack.prod.config",
    "build-prod": "npm run build:server && npm run build:client:prod",
    "start": "node lib/server/index.js",
    "prod": "npm run build:server && npm run build:client:prod && npm run start",
    "dev": "npm run build:server && NODE_ENV=development npm run start",
    "dev:amigos": "npm run build:server && NODE_ENV=development SIMPLIFIED_CATALOG_BASE=http://simplye-dev-cm.amigos.org/xyzlib node lib/server/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@hot-loader/react-dom": "^16.11.0",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.3",
    "@types/react": "^16.8.25",
    "@types/react-router-dom": "^5.1.2",
    "@types/theme-ui": "^0.2.5",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "babel-loader": "^8.0.6",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "fetch-mock": "^7.3.1",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "node-sass": "4.13.0",
    "prettier": "1.19.1",
    "react-hot-loader": "^4.12.16",
    "sass-lint": "^1.9.1",
    "sass-loader": "^7.1.0",
    "sinon": "^7.3.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^4.3.1",
    "typescript": "^3.7.2",
    "url-loader": "^0.5.7",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@csstools/normalize.css": "^10.1.0",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@mdx-js/react": "^1.5.1",
    "bootstrap": "^3.3.6",
    "express": "^4.14.0",
    "font-awesome": "^4.7.0",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^9.4.1",
    "opds-feed-parser": "0.0.16",
    "opds-web-client": "^0.2.10",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.6",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.1.0",
    "styled-components": "^4.3.2",
    "styled-system": "^5.1.2",
    "theme-ui": "^0.2.46",
    "tinycolor2": "^1.4.1",
    "universal-url": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
