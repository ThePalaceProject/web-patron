{
  "name": "simplified-circulation-patron-web",
  "version": "0.2.1",
  "description": "patron UI for Circulation Manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/circulation-patron-web.git"
  },
  "author": "NYPL",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "./node_modules/.bin/eslint -c .eslintrc.js src/**/*.ts src/**/*.tsx",
    "lint:js:fix": "./node_modules/.bin/eslint -c .eslintrc.js src/**/*.ts src/**/*.tsx --fix",
    "lint:sass": "sass-lint -c .sass-lint.yml -v -q",
    "test": "npm run lint:js && tsc && cp -r src/stylesheets lib && mocha --require lib/testHelper.js lib/__tests__/*.js lib/**/__tests__/*.js lib/**/**/__tests__/*.js",
    "build:server": "tsc && cp -r src/stylesheets lib",
    "build:client:prod": "cp -r src/stylesheets lib && webpack -p --progress --display-modules --config webpack.prod.config",
    "build-prod": "npm run build:server && npm run build:client:prod",
    "start": "NODE_ENV=production node lib/server/index.js",
    "start:amigos": "SIMPLIFIED_CATALOG_BASE=http://simplye-dev-cm.amigos.org/xyzlib node lib/server/index.js",
    "prod": "npm run build:server && npm run build:client:prod && NODE_ENV=production npm run start",
    "dev": "npm run build:server && NODE_ENV=development npm run start",
    "prod:amigos": "npm run build:server && npm run build:client:prod",
    "dev:amigos": "npm run build:server && NODE_ENV=development SIMPLIFIED_CATALOG_BASE=http://simplye-dev-cm.amigos.org/xyzlib node lib/server/index.js",
    "generate-icons": "npx @svgr/cli --template src/icons/_template.js --typescript --icon --ext tsx -d src/icons src/icons",
    "heroku-postbuild": "npm run prod:amigos",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/register": "^7.8.3",
    "@hot-loader/react-dom": "^16.11.0",
