    "webpack-cli": "^3.3.0",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@csstools/normalize.css": "^10.1.0",
    "@emotion/styled": "^10.0.27",
    "@theme-ui/color": "^0.3.1",
    "@theme-ui/components": "^0.3.1",
    "bootstrap": "^3.3.6",
    "downloadjs": "^1.4.7",
    "express": "^4.14.0",
    "font-awesome": "^4.7.0",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^9.4.1",
    "moment": "^2.24.0",
    "opds-feed-parser": "0.0.16",
    "opds-web-client": "github:NYPL-Simplified/opds-web-client#opds-web-client-v0.3.4-gitpkg",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.12.0",
    "react-hook-form": "^4.9.2",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-spinners": "^0.8.0",
    "reakit": "^1.0.0-beta.15",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.3.2",
    "styled-system": "^5.1.2",
    "theme-ui": "^0.3.1",
    "tinycolor2": "^1.4.1",
    "universal-url": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "engines": {
    "node": "13.x"
  }
}
